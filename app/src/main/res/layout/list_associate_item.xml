<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/dark_green_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:layout_margin="3.5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:weightSum="1"
            android:visibility="gone">

            <com.fortyk.studentapp.customfonts.customtextview.KgCornerTextView
                android:id="@+id/tx_associate_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="I Catch worms for lunch I Catch worms for lunch I Catch worms for lunch"
                android:textColor="@color/white"
                android:textSize="17.5sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:padding="2dp"
                android:layout_weight="0.25"/>

            <ImageView
                android:id="@+id/audiotext_associate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:padding="8dp"
                android:layout_weight="0.75"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_curve_green"
                android:src="@drawable/ans_audio"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_associate_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/correct_order_bg"
            android:src="@drawable/placeholder_rec"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:padding="2dp"/>

        <ImageView
            android:id="@+id/audio_associate_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ans_audio_green"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/border_curve_white"
            android:visibility="gone"
            android:padding="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/empty_bg"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:background="@drawable/line_dash_bg">

        <LinearLayout
            android:id="@+id/selected_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.fortyk.studentapp.customfonts.customtextview.KgCornerTextView
                android:id="@+id/tx_option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:scrollbars="vertical"
                android:textColor="@color/darkergreen"
                android:background="@drawable/border_curve_white"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/correct_order_bg"
                android:src="@drawable/placeholder_rec"
                android:visibility="gone"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/audio_option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ans_audio_green"
                android:background="@drawable/border_curve_white"
                android:visibility="gone"
                android:padding="20dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>