<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="four_QuizTemplate3CheckBoxOptionTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginRight">-65dp</item>/>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">7dp</item>/>
        <item name="android:paddingRight">3dp</item>/>
        <item name="android:paddingTop">1.5dp</item>/>
        <item name="android:paddingBottom">1.5dp</item>/>
        <item name="android:button">@drawable/checkbox_option_selector</item>/>
        <item name="android:layout_weight">1.98</item>/>
        <item name="android:layout_gravity">center_vertical</item>/>
        <item name="android:scaleX">0.60</item>
        <item name="android:scaleY">0.60</item>
    </style>

    <style name="four_QuizTemplate3IncludeOptionTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>/>
        <item name="android:layout_marginRight">2dp</item>/>
        <item name="android:layout_marginTop">5dp</item>/>
        <item name="android:layout_weight">0.02</item>
    </style>

    <style name="four_QuizTemplate2TextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/darkergreen</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">0.15</item>
    </style>

    <style name="four_QuizTemplate2OptionLinearLayoutTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">4.5dp</item>/>
        <item name="android:layout_marginBottom">4.5dp</item>/>
        <item name="android:layout_marginLeft">4.5dp</item>/>
        <item name="android:weightSum">1</item>
    </style>

    <style name="four_QuizTemplate2FrameLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">6dp</item>/>
        <item name="android:layout_weight">0.85</item>
    </style>

    <style name="four_QuizTemplate2ImageViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AlertDialogThemeNormal" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">#fff</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleNormal</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleNormal</item>
    </style>

    <style name="NegativeButtonStyleNormal" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/my_button_bg</item>
    </style>

    <style name="PositiveButtonStyleNormal" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/my_button_bg</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
