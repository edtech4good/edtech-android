<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/template_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <com.fortyk.studentapp.customfonts.customtextview.KgCornerTextView
                android:id="@+id/question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="General Instructions of Template1"
                android:textColor="@color/darkSeaBlue"
                android:textSize="21dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/associate_audio"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:src="@drawable/associate_audio_image"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <com.fortyk.studentapp.customfonts.customtextview.KgCornerTextView
                android:id="@+id/question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Lesson > Quiz > Q1"
                android:textColor="@color/darkSeaBlue"
                android:textSize="21dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <com.fortyk.studentapp.utils.HorizontalProgressBar
            android:id="@+id/horizontalProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/reset" />

            <ImageView
                android:id="@+id/tryAgain"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:src="@drawable/try_again"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/submit"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:src="@drawable/submit_unselected" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>