<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/radio_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_radio_button_unselected" />

    <com.fortyk.studentapp.customfonts.customtextview.KgCornerTextView
        android:id="@+id/tx_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textColor="@drawable/custom_radio_button_text"
        android:textSize="14sp"
        android:paddingEnd="10dp"
        android:gravity="center|left"/>

</LinearLayout>