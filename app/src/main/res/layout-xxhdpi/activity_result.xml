<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/level_negative_feedback">

        <ImageView
            android:id="@+id/animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/animation_oops_level" />

        <ImageView
            android:id="@+id/tiger"
            android:layout_width="100dp"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="280dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/oops_tiger" />

        <Button
            android:id="@+id/finish"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/finish" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/try_again_text" />

        <TableLayout
            android:id="@+id/lesson_quiz_details"
            android:layout_width="250dp"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/transparent_level_fail"
            android:paddingLeft="5dp"
            android:paddingTop="6dp">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Grade"
                    android:textColor="@color/lightyellow"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="India"
                    android:textColor="@color/white"
                    android:textSize="16sp"  />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Level"
                    android:textColor="@color/lightyellow"
                    android:textSize="16sp"  />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="2.Himalayas"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Lesson"
                    android:textColor="@color/lightyellow"
                    android:textSize="16sp"  />

                <TextView
                    android:id="@+id/lesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="Unit 1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Quiz"
                    android:textColor="@color/lightyellow"
                    android:textSize="16sp"  />

                <TextView
                    android:id="@+id/practice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="Practice A"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Score"
                    android:textColor="@color/lightyellow"
                    android:textSize="16sp"  />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="10/20"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Status"
                    android:textColor="@color/lightyellow"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Incomplete"
                    android:textColor="@color/white"
                    android:textSize="16sp"  />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/percentage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/title"
            android:layout_alignEnd="@+id/title"
            android:layout_marginTop="170dp"
            android:layout_marginRight="150dp"
            android:gravity="center"
            android:text="20%"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>