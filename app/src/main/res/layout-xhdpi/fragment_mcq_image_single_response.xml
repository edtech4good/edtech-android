<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/question_heading_audio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/que_audio_selector"
            android:visibility="gone" />

        <com.fortyk.studentapp.customfonts.customtextview.KgCornerTextView
            android:id="@+id/question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/question_audio"
            android:layout_toEndOf="@+id/question_heading_audio"
            android:background="@drawable/question_bg"
            android:gravity="center"
            android:minLines="2"
            android:text="Select the correct option"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/question_audio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/que_audio_selector"
            android:visibility="gone"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/answer_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:scrollbarThumbVertical="@drawable/thumb"
        android:scrollbarTrackVertical="@drawable/track"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarSize="7dp" />

</LinearLayout>